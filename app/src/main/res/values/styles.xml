<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BottomSheetTheme" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetAppearanceOverlay</item>
    </style>
    <style name="BottomSheetAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">52%</item>
    </style>
    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/selector_outlined_box</item>
        <item name="hintTextColor">@color/white</item>
    </style><style name="OutlinedTextInputLayout.Password" parent="OutlinedTextInputLayout">
    <item name="endIconMode">password_toggle</item>
    <item name="endIconTint">@color/white</item>
    </style>
    <style name="OutlinedTextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>