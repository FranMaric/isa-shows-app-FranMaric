<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="44dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/knv1"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF52368C"/>

    <TextView
        android:id="@+id/mailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="29dp"
        android:textAlignment="center"
        tools:text="imenko.prezimenovic@vrucimail.com"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="24sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeProfilePhotoButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#FF52368C"
        app:strokeWidth="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="28sp"
        android:text="@string/change_profile_photo"
        android:textAllCaps="false"
        android:textColor="#FF52368C"
        android:textFontWeight="700"
        android:textSize="17sp"
        app:cornerRadius="40dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FF52368C"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="28sp"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="17sp"
        app:cornerRadius="40dp"/>
</LinearLayout>