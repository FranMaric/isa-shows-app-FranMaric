<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#3D1D72">

    <ImageView
        android:layout_width="139dp"
        android:layout_height="99dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_left_illustration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="264dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_right_illustration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_triangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="181dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/triangle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="181dp"
        android:text="Shows"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="34sp"
        android:lineSpacingExtra="7sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="273dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="7sp"
        android:text="Login"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/continueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginTextView"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:text="In order to continue please log in."
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mailTextInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/continueTextView"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="26dp"
        android:hint="Mail"
        app:boxStrokeColor="@color/selector_outlined_box"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTextInput"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mailTextInput"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="26dp"
        android:hint="Password"
        app:endIconMode="password_toggle"
        app:boxStrokeColor="@color/selector_outlined_box"
        android:textColorHint="@color/white"
        app:hintTextColor="@color/white"
        app:endIconTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#55BBBBBB"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="17sp"
        android:lineSpacingExtra="28sp"
        android:fontFamily="sans-serif"
        app:cornerRadius="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>